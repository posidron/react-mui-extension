{
  "manifest_version": 3,
  "name": "React Chrome Extension",
  "version": "1.0.0",
  "description": "Chrome extension with popup, tab, and sidebar examples",
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "sidePanel",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "tab.html"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "host_permissions": [
    "https://ifconfig.co/*",
    "https://*/*"
  ],
  "permissions": [
    "system.cpu",
    "system.memory"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
